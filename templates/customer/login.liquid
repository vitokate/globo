{{ index_for_top_components }}

<div class="container mt-lg-0 my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="page-header"><small>{% t 'Login to' %}</small>{{ store.name }}</h1>
    </div>
    <div class="col-md-6 offset-md-3 col-12">
      <div class="card mb-5">
        <div class="card-body">
          {{ login_form }}
        </div>
      </div>
      <h2 class="block-header text-center">{% t 'Are you new at' %} {{ store.name }}?</h2>
      <p class="text-center">{{ options.new_customer_message }}</p>
      <a href="{{ customer_registration_url }}" class="btn btn-block btn-secondary" title="{% t 'Register as Customer' %}">
        {% t 'Sign Up' %}
      </a>
    </div>
  </div>
</div>

